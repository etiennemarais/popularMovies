<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/movie_list_card_view"
        style="@style/MovieCard">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/movie_card_backdrop_image_view"
                android:contentDescription="@string/movie_card_backdrop_image_view_description"
                style="@style/MovieCard.Image" />

            <TextView
                android:id="@+id/movie_card_title_text_view"
                android:layout_alignBottom="@+id/movie_card_backdrop_image_view"
                style="@style/MovieCard.Label"
                tools:text="Movie Title" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>